
<div class='columns'>
	<div class='column is-one-third'></div>
	<div class='column'>
    <h4 class='title is-4'>Editar mi restaurant</h4>

    <%= form_with(model: @establecimiento, url: establecimiento_path(@establecimiento.id), method: :patch) do |form| %>
      <div class="field">
        <label class='label'><%= form.label "Nombre" %></label>
        <%= form.text_field :nombre, class:'input' %>
      </div>

      <div class="field">
        <label class='label'><%= form.label "Tipo" %></label>
        <%= form.text_field :tipo, class:'input'%>
      </div>

      <div class="field">
        <label class='label'><%= form.label "Descripción" %></label>
        <%= form.text_area :descripcion , :cols => '20', :rows => '5', class:'input'%>
      </div>

      <div class="field">
        <label for="comuna_id" class="label">Seleccione una comuna:</label>
        <%= form.collection_select :comuna_id, Comuna.all, :id, :nombre, prompt: true, class: "form-control" %>
      </div>

      <div class="field">
        <label class='label'><%= form.label "Dirección" %></label>
        <%= form.text_field :adress, class:'input' %>
      </div>

      <div class="field">
        <label class='label'><%= form.label "Foto de perfil" %></label>
        <%= form.file_field :profile_image, direct_upload: true%>
      </div>

      <div class="field">
        <label class='label'><%= form.label "Fotos del Menú" %></label>
        <%= form.file_field :images, direct_upload: true%>
      </div>

      <%if current_user.role == "admin"%>
        <div class="field">
          <label class='label'><%= form.label "Valoración" %></label>
          <%= form.text_field :valoracion, class:'input' %>
        </div>
      <% end %>

      <div class="actions">
        <%= form.submit "Actualizar restaurant", class:'button is-link'%>
      </div>
    <% end %>

    <div><%= link_to 'Volver', establecimientos_path %></div>
  </div>
  <div class='column'></div>
</div>
<div class='columns'>
	<div class='column is-one-third'></div>
	<div class='column'>
        <h4 class='title is-4'>Postula tu restaurant</h4>

        <%= form_with(model: @establecimiento, method: :post) do |form| %>
            <div class='field'>
                <label class='label'><%= form.label "Nombre" %></label>
                <%= form.text_area :nombre, class:'input' %>
            </div>
            <div class='field'>
                <label class='label'><%= form.label "Tipo" %></label>
                <%= form.text_area :tipo, class:'input' %>
            </div>
            <div class='field'>
                <label class='label'><%= form.label "Descripción" %></label>
                <%= form.text_area :descripcion , :cols => '20', :rows => '5', class:'input'%>
            </div>
            <div class="field">
                <label for="comuna_id" class="label">Seleccione una comuna:</label>
                <%= form.collection_select :comuna_id, Comuna.all, :id, :nombre, prompt: true, class: "form-control" %>
            </div>
            <div class="field">
                <label class='label'><%= form.label "Dirección" %></label>
                <%= form.text_field :adress, class:'input' %>
            </div>
            <div class="field">
                <label class='label'><%= form.label "Foto de Perfil" %></label>
                <%= form.file_field :profile_image, direct_upload: true %>
            </div>

            <div class="field">
                <label class='label'><%= form.label "Fotos del Menú" %></label>
                <%= form.file_field :images, direct_upload: true %>
            </div>

            <div class="actions">
                <%= form.submit "Crear restaurant", class:'button is-link' %>
            </div>
        <% end %>

        <br>

        <%= link_to 'Todos los restaurantes', list_establecimientos_path, class:'button is-link is-light' %>
    </div>
    <div class='column'></div>
</div>
